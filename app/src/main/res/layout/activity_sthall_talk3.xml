<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/st_storyText"
        android:layout_width="333dp"
        android:layout_height="207dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="69dp"
        android:autoSizeTextType="uniform"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="122dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:autofillHints="name"
        android:background="@null"
        android:autoSizeTextType="uniform"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/st_storyText"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/name_hyungchan"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginEnd="12dp"
        android:autofillHints="name"
        android:gravity="right"
        android:autoSizeTextType="uniform"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/st_storyText"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/name_minsu"
        android:layout_width="122dp"
        android:layout_height="59dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="name"
        android:gravity="right"
        android:autoSizeTextType="uniform"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/st_storyText"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/st_imageView2"
        android:layout_width="208dp"
        android:layout_height="210dp"
        android:autoSizeTextType="uniform"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/name_hyungchan"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/st_imageView1"
        android:layout_width="228dp"
        android:layout_height="210dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/userName"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/skipButtonText"
        android:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="next"
        android:backgroundTint="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>