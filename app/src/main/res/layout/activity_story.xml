<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/maincharacter"
            android:layout_width="228dp"
            android:layout_height="210dp"
            app:layout_constraintBottom_toTopOf="@id/userName"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.302"
            app:srcCompat="@drawable/maincharacter" />

        <ImageView
            android:id="@+id/minsu"
            android:layout_width="208dp"
            android:layout_height="210dp"
            app:layout_constraintBottom_toTopOf="@id/name_minsu"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/minsu" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="122dp"
            android:layout_height="59dp"
            android:layout_marginStart="4dp"
            android:autofillHints="name"
            android:inputType="text"
            android:background="@null"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintBottom_toTopOf="@+id/storyText1"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/name_minsu"
            android:layout_width="122dp"
            android:layout_height="59dp"
            android:layout_marginEnd="12dp"
            android:autofillHints="name"
            android:text="케인"
            android:gravity="right"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/storyText1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maincharacter" />



        <TextView
            android:id="@+id/storyText1"
            android:layout_width="404dp"
            android:layout_height="240dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:maxLines="8"
            android:text="@string/storyLine1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"

            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="485dp" />

        <TextView
            android:id="@+id/storyText2"
            android:layout_width="404dp"
            android:layout_height="240dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="488dp"
            android:maxLines="5"
            android:text="@string/storyLine2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/storyText3"
            android:layout_width="404dp"
            android:layout_height="240dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="488dp"
            android:maxLines="3"
            android:text="@string/storyLine3"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/storyText4"
            android:layout_width="404dp"
            android:layout_height="240dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="488dp"
            android:maxLines="5"
            android:text="@string/storyLine4"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/storyText5"
            android:layout_width="404dp"
            android:layout_height="240dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="488dp"
            android:maxLines="8"
            android:text="@string/storyLine5"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/storyText6"
            android:layout_width="404dp"
            android:layout_height="240dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="488dp"
            android:maxLines="5"
            android:text="@string/storyLine6"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/storyText7"
            android:layout_width="390dp"
            android:layout_height="245dp"
            android:maxLines="1"
            android:text="@string/storyLine7"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/storyText1"
            app:layout_constraintEnd_toEndOf="@+id/storyText1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/storyText1" />


        <Button
            android:id="@+id/storyLine1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="664dp"
            android:layout_marginEnd="24dp"
            android:text="Next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/storyLine2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="664dp"
            android:layout_marginEnd="24dp"
            android:text="Next"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/storyLine3Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="664dp"
            android:layout_marginEnd="24dp"
            android:text="Next"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/storyLine4Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="664dp"
            android:layout_marginEnd="24dp"
            android:text="Next"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/storyLine5Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="664dp"
            android:layout_marginEnd="24dp"
            android:text="Next"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/storyLine6Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="664dp"
            android:layout_marginEnd="24dp"
            android:text="Next"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/story_endButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="664dp"
            android:layout_marginEnd="24dp"
            android:text="Start"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/skipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:text="@string/skipButtonText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>